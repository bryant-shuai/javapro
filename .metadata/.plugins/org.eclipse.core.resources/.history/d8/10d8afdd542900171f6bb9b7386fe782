public class StringToDouble {

    public static void main(String[] args) {
        Double s = 2.1;
        System.out.println(s);
        System.out.println(s.toString());
//      String转成Double
        String d = "ddd";
        Double dd = Integer.valueOf(d); 
        System.out.println(d.);
        System.out.println("---------------------");      
        String a = "a  b  c";
//      双引号可以，单引号不可以；
        System.out.println(a.replace("  ", ""));
        
    }

}